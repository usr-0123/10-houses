<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/new_report_form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Title of the New Report Form -->
        <TextView
            android:id="@+id/newReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_report"
            android:textSize="34sp"
            android:layout_margin="10dp"/>

        <!-- EditText for report message -->
        <EditText
            android:id="@+id/reportMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/enter_report_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minHeight="120dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Button to upload media (image/video) -->
        <Button
            android:id="@+id/uploadMediaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_media"
            android:layout_margin="16dp"/>

        <!-- Placeholder for displaying selected media -->
        <LinearLayout
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Preview of uploaded media (could be images or video thumbnails) -->
            <!-- Dynamically populated in your code -->
        </LinearLayout>

        <!-- Button to submit the report -->
        <Button
            android:id="@+id/submitReportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_report"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>